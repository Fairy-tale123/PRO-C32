{
  "compilerOptions": {
    "target": "es5",
    "allowJs": false,
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./src/*"
  ],
  "exclude": [
    "./dist/**/*"
  ]
}
